
namespace CS_Course
{
    internal class Program
    {
        static bool rightGuess;
        static int num = 0;
        static void Main(string[] args)
        {
            /*
            int time = DateTime.Now.Hour;
            string message = time >= 6 && time < 11 ? "Goodmorning" : time <= 18 ? "Good days" : "good night";
            Console.WriteLine(message);
            */

            /*
